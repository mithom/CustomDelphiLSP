{
  "name": "delphi-lsp",
  "description": "custom V&V lsp for delphi",
  "author": "Thomas Michiels",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "Thomas Michiels",
  "categories": [],
  "engines": {
    "vscode": "^1.99.3"
  },
  "activationEvents": [
    "onLanguage:delphi"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "tsc": "^2.0.4"
  }
}
