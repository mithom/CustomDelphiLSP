{
  "name": "custom-delphi-lsp",
  "description": "custom V&V lsp for delphi",
  "author": "Thomas Michiels",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "Thomas Michiels",
  "categories": [],
  "engines": {
    "vscode": "^1.99.3"
  },
  "activationEvents": [
    
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/vscode": "1.99.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "antlr4-c3": "^3.4.4",
    "antlr4ng": "^3.0.16",
    "tsc": "^2.0.4"
  },
  "contributes": {
    "configuration": {
      "title": "custom DelphiLSP",
      "type": "object",
      "properties": {
        "customDelphiLSP.projectJsonPath": {
          "type": "string",
          "description": "path of your projects {projectName}.delphilsp.json file",
          "default": "file:///o%3A/UL3.delphilsp.json",
          "scope": "machine"
        }
      }
    },
    "languages": [
      {
        "id": "objectpascal",
        "extensions": [
          ".pas",
          ".dpr",
          ".pp",
          ".inc",
          ".dpk"
        ],
        "aliases": [
          "Delphi",
          "Del",
          "objectpascal",
          "opascal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "objectpascal",
        "scopeName": "source.objectpascal",
        "path": "./syntaxes/objectpascal.plist"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+up",
        "command": "editor.action.revealDeclaration",
        "when": "editorTextFocus && editorLangId == objectpascal"
      },
      {
        "key": "ctrl+shift+down",
        "command": "editor.action.goToImplementation",
        "when": "editorTextFocus && editorLangId == objectpascal"
      }
    ]
  }
}
